@using Qlist.Authentication;
@inherits LayoutComponentBase
@inject AuthenticationStateProvider authStateProvider;
@inject IJSRuntime JSRuntime
@inject NavigationManager navManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

<RadzenLayout>
    <Radzen.Blazor.RadzenDialog />
    <RadzenHeader>
        <div class="row justify-content-start align-items-center">
            <div class="col-6 d-flex align-items-center">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
                <img src="/images/logo.png" height="40" />

            </div>
            <div class="col-6 d-flex align-items-center justify-content-end">
                <RadzenButton Click=@(args => Logout()) Text="Logout" Icon="power_settings_new" ButtonStyle="ButtonStyle.Warning" />
               
            </div>
        </div>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenContentContainer Name="main">
            @Body
        </RadzenContentContainer>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded">
        <NavMenu></NavMenu>
    </RadzenSidebar>
    <RadzenFooter>
        <RadzenLabel Text="Thaitara Qlist, Copyright â’¸ 2023">
        </RadzenLabel>
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;


    void SidebarToggleClick()
    {
        sidebarExpanded = !sidebarExpanded;
    }
    private async Task Logout()
    {
        var customAuthStateProvider = (CustomAuthentication)authStateProvider;
        await customAuthStateProvider.UpdateAuthenticationState(null);
        navManager.NavigateTo("/", true);
    }
    async Task OnClick(string buttonName)
    {
        
    }
}


