@page "/Data/ProjectDetail/{id:int}"

@using Data;
@using ModelM2s;
@using ModelM4s;

@inject ProjectData pj;

<h3>Project Details</h3>
<br />
<br />
<p font-size:25px> <b>Running Number :</b> @projecthd.ProjectHdrunNo  </p>
<p font-size:25px> <b>Project Name :</b> @projecthd.ProjectName  </p>
<p font-size:25px> <b>Description :</b> @projecthd.Description  </p>
<p font-size:25px> <b>Remarked :</b> @projecthd.Remark </p>
<p font-size:25px> <b>Status :</b> @projecthd.ProjectHdstatus </p>

@if (string.IsNullOrEmpty(projecthd.Budget.ToString()))
{
    <p font-size:25px> <b>Budget :</b> 0 THB</p>
}
else
{
    <p font-size:25px> <b>Budget :</b> @projecthd.Budget THB</p>
}


@if (string.IsNullOrEmpty(projecthd.PlanStartDate.ToString()))
{
    <p font-size:25px> <b>Started Date :</b> Not Planed</p>
}
else
{
    <p font-size:25px> <b>Started Date :</b> @projecthd.PlanStartDate</p>
}

@if (string.IsNullOrEmpty(projecthd.PlanFinishDate.ToString()))
{
    <p font-size:25px> <b>Finished Date :</b> Not Planed</p>
}
else
{
    <p font-size:25px> <b>Finished Date :</b> @projecthd.PlanFinishDate</p>
}

@if (customerinfo is null)
{

}
else
{
    <p style="background-color:white; border:solid">
        @foreach (var list in customerinfo)
        {
            @*var districe = tambon[0].Amphure;
            var province = districe.Province;
            var country = province.Country;*@

            <p>
            &nbsp; English Name :  @list.CompanyNameEn <br />
            &nbsp; Thai Name :  @list.CompanyNameTh<br />
            &nbsp; Address :  @address[0].AddressNo @address[0].Moo @address[0].Soi @address[0].Road <br />
            @*&nbsp; @tambon[0].NameTh @tambon[0].Amphure.NameTh @tambon[0].Amphure.Province.NameTh <br/>
            &nbsp; @tambon[0].Amphure.Province.Country.Country @address[0].PostCode*@
            &nbsp; Telephone :  @list.Telephone <br />
            &nbsp; E-Mail :  @list.Email <br />
            &nbsp; Website :  @list.WebSite <br />
            &nbsp; Facebook :  @list.Facebook <br />
        </p>
        }
    </p>
}

@if (contactinfo is null)
{

}
else
{
    <p style="background-color:white; border:solid">
    <p><b>&nbsp; Contact Information</b></p>

    @foreach (var record in contactinfo)
    {
        <p>
            &nbsp; Thai Name :  @record.Title @record.FirstNameTh @record.LastNameTh<br />
            &nbsp; English Name :  @record.FirstNameEn @record.LastNameEn<br />
            &nbsp; Phone Number :  @record.PhoneNo <br />
            &nbsp; Mobile Number :  @record.MobileNo <br />
            &nbsp; E-Mail : @record.Email <br />
            &nbsp; Line : @record.LineId <br />
            &nbsp; Facebook : @record.FaceBook <br />
            &nbsp; LinkedIn : @record.Linkedin <br />
        </p>
    }
    </p>
}

<br />

<table class="table table-striped" style="background-color:white; border:solid">
    <thead>
        <tr>
            <th>Running Number</th>
            <th>Project Sub Name</th>
            <th>Remarked</th>
            <th>Description</th>
            <th>Status</th>
            <th>Project Sub</th>
            <th>Assignment</th>
        </tr>
    </thead>
    <tbody>
        @if (projecthd.ProjectSubProjectTls != null)
        {
            @foreach (var sub in projecthd.ProjectSubProjectTls)
            {
                <tr>
                    <td>@sub.ProjectSubRunNo</td>
                    <td>@sub.ProjectSubName</td>
                    <td>@sub.Remark</td>
                    <td>@sub.Description</td>
                    <td>@sub.ProjectSubStatus</td>
                    <td><a href="/Data/ProjectSubDetail/@sub.Id">Link</a></td>
                    <td><a href="/Data/MemberAssign/@sub.Id">Link</a></td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public int id { get; set; }

    public ProjectHd projecthd { get; set; } = new ProjectHd();
    public ProjectSubProjectTl formsub { get; set; } = new ProjectSubProjectTl();

    private List<MemberMaster> customerinfo;
    private List<MemberContactPerson> contactinfo;
    private List<MemberAddress> address;
    private List<MasterTambon> tambon;

    protected override async Task OnInitializedAsync()
    {
        projecthd = await pj.GetProjectHDbyID(id);
        customerinfo = Newtonsoft.Json.JsonConvert.DeserializeObject<List<MemberMaster>>(projecthd.CustomerInfo);
        address = await pj.GetAddressByMemberNo(customerinfo[0].MemberNo);
        //tambon = await pj.GetTambonByID(address[0].TambonId);
        
        contactinfo = Newtonsoft.Json.JsonConvert.DeserializeObject<List<MemberContactPerson>>(projecthd.ContactInfo);
        StateHasChanged();
    }
}